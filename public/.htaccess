/* .htaccess */
# Set the default directory index file
DirectoryIndex index.html

# Enable mod_rewrite for URL rewrites
RewriteEngine On

# Redirect HTTP to HTTPS (if SSL is enabled)
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Ensure sitemap.xml is publicly accessible
<Files "sitemap.xml">
  Require all granted
</Files>

# Handle custom error pages
# ErrorDocument 404 /not_found

# Exclude error pages from React SPA rewrite rule
# RewriteCond %{REQUEST_URI} !^/not_found$

# Rewrite all other requests to index.html (React SPA fix)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]

# Set proper cache headers for static assets (adjust extensions as needed)
<FilesMatch "\.(jpg|jpeg|png|gif|css|js|pdf|ico|woff2|ttf|eot|svg|mp4)$">
  Header set Cache-Control "max-age=31536000, public"
</FilesMatch>